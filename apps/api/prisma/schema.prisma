generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id  Int       @id @default(autoincrement())
  email String    @unique
  name  String
  password  String
  avatar String?
  hashedRefreshToken String?
  role  Role  @default(USER)
}

enum Role {
  ADMIN
  USER
}